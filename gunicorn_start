#!/bin/bash
 
NAME="progile"                                 		# Name of the application
DJANGODIR=/var/www/progile/             				# Django project directory
SOCKFILE=/var/www/progile/run/gunicorn.sock  			# we will communicte using this unix socket
USER=wendell                                      	  	# the user to run as
GROUP=wendell                                    		# the group to run as
NUM_WORKERS=3                                 		# how many worker processes should Gunicorn spawn
DJANGO_SETTINGS_MODULE=system.settings       		 # which settings file should Django use
DJANGO_WSGI_MODULE=system.wsgi                		# WSGI module name
 
 
# Activate the virtual environment
cd $DJANGODIR
. /root/.virtualenvs/progile/bin/activate
export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$DJANGODIR:$PYTHONPATH
 
# Create the run directory if it doesn't exist
RUNDIR=$(dirname $SOCKFILE)
test -d $RUNDIR || mkdir -p $RUNDIR
 
# Start your django gunicorn
# Programs meant to be run under supervisor should not daemonize themselves
exec /root/.virtualenvs/progile/bin/gunicorn ${DJANGO_WSGI_MODULE}:application \
  --name $NAME \
  --workers $NUM_WORKERS \
  --user=$USER --group=$GROUP \
  --log-level=debug \
  --bind=unix:$SOCKFILE
